use std::env;
use std::path::PathBuf;

fn main() -> Result<(), Box<dyn std::error::Error>> {
    let root_dir = PathBuf::from(env::var("CARGO_MANIFEST_DIR").unwrap());

    prost_build::Config::new()
        .out_dir("src/protos")
        .compile_protos(
            &[
                "src/protos/custom-value-type.proto",
                "src/protos/hllplus-unique.proto",
            ],
            &[root_dir.clone(), root_dir.join("src/protos/")],
        )?;
    Ok(())
}
